class MinStack{
    int[] stack;
    int[] minStack;
    int top;

    public MinStack(){
        stack = new int[30000];    
        minStack = new int[30000];
        top = -1;
    }
    
    public void push(int v){
        top++;
        stack[top] = v;
        if(top == 0){
            minStack[top] = v;
        }
        else{
            minStack[top] = Math.min(v, minStack[top - 1]);
        }
    }
    
    public void pop(){
        top--;
    }
    
    public int top(){
        return stack[top];
    }
    
    public int getMin(){
        return minStack[top];
    }
}
